<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/htab_maincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/icon_shape_circuler_two"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.ProfileTheme"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"

            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            app:title=" "
            app:titleTextColor="@color/whiteTextColor"

            />
    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تعديل الملف الشخصي "
        android:textColor="@color/whiteTextColor"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="14dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_gravity="center"

        android:layout_margin="5dp"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="526dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="0dp">

        <TextView
            android:id="@+id/nameSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relImg"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            android:text="اسم المستخدم :"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nameSignUpHin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="80dp"

            android:hint="اسم المستخدم"
            android:textSize="18dp" />





        <TextView
            android:id="@+id/emailSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameSignUp"

            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:text="الايميل: "
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailSignUpHin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameSignUpHin"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_marginTop="15dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="80dp"
            android:hint="البريد الالكتروني"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailSignUp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:text="الوزن:   "
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/wightHin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailSignUpHin"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:inputType="number"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="80dp"
            android:gravity="left"
            android:hint=" wight  "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:text="الطول:   "
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/heightHin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wightHin"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:inputType="number"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="80dp"
            android:gravity="left"
            android:hint=" height  "
            android:textSize="18dp" />




    </RelativeLayout>

        <Spinner
            android:id="@+id/planets_spinner"
            android:layout_width="fill_parent"
            android:layout_marginTop="388dp"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/planets_spinnerL"
            android:layout_width="fill_parent"
            android:layout_marginTop="444dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/edit_profile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/planets_spinner"
            android:layout_marginTop="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape"
            android:text="حفظ التعديلات"
            android:textColor="@color/colorAccent" />


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>