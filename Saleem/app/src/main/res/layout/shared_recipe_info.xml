<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/recipe_info_image"
        android:layout_width="match_parent"
        android:src="@drawable/work_out"
        android:layout_height="140dp">

    </ImageView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recipe_info_rectangluer"
        >
        <TextView
            android:id="@+id/recipe_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="بيتزا"
            android:textSize="35dp"
            android:textColor="#111"
            >

        </TextView>

        <TextView
            android:id="@+id/recipe_info_calories"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1230"
            android:textColor="#F0EEEE"
            android:textSize="35dp">

        </TextView>
    </LinearLayout>
</LinearLayout>