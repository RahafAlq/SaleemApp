<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:weightSum="100"
    android:backgroundTint="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/work_out"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="20dp"
        android:text="اسم التمرين "
        >
    </TextView>
    <EditText
        android:id="@+id/addExcerciseWorkoutname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/border"
        android:hint="مثال: تمرين جزء سفلي"></EditText>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_weight="3"
        android:text="السعرات المحروقة "
        >
    </TextView>
    <EditText
        android:id="@+id/addExcerciseburentCal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:padding="5dp"
        android:layout_weight="2"
        android:inputType="number"
        android:gravity="center"
        android:hint="300" ></EditText>
    <TextView
        android:id="@+id/addExcerciseError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF3131"
        >
    </TextView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
 >
    <Button
        android:id="@+id/cancelExcercise"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
android:layout_weight="0.5"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:backgroundTint="#341A1818"
        android:textSize="20dp"
        android:text="إلغاء"
        android:textColor="#F7FFFFFF"></Button>
    <Button
        android:id="@+id/addExcercise"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:layout_weight="0.5"
        android:backgroundTint="#59E7A2"
        android:text="إضافة"
        android:textSize="20dp"
        android:textColor="#F7FFFFFF">

    </Button>
</LinearLayout>

</LinearLayout>